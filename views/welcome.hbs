<div class="card col-5 mx-auto mt-5">
  <div class="card-body mt-3 mb-4 text-center">
    <h3 class="text-center mt-5 ">
      Welcome back, {{user.firstName}}! ðŸ˜‰
    </h3>
    <form action="/signout" method="post">
      <button class="btn btn-dark btn-lg col-3 mt-4 mb-3" type="submit" onclick="onClickedSignout()">Sign out</button>
    </form>
  </div>
</div>

<script>
  function onClickedSignout() {
    let timerInterval
    swal.fire({
      icon: 'success',
      title: 'You have signed out!',
      html: 'Redirect in <strong></strong> secs...',
      showConfirmButton: false,
      timer: 5000,
      timerProgressBar: true,
      onOpen: () => {
        Swal.showLoading()
        timerInterval = setInterval(() => {
          swal.getContent().querySelector('Strong')
          .textContent = Math.ceil(swal.getTimerLeft() / 1000)
        }, 100)
      },
      onClose: () => {
        clearInterval(timerInterval)
      }
    }).then((result) => {
      if (result.dismiss === Swal.DismissReason.timer) {
        console.log('I was closed by the timer')
        }
      })
}
</script>